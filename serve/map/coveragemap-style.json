{
  "version": 8,
  "glyphs": "map/fonts-pbf/{fontstack}/{range}.pbf",
  "sources": {

    "coverage-map-source": {
      "type": "raster",
      "tiles": [
        "https://tiles.netzkarte.app/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 13,
      "attribution": "Render by netzkarte.app"
    },


    "pmtiles-basemap": {
      "type": "vector",
      "url": "http://192.168.178.2:8003/data/pmtiles.json"
    },


    "cells-source": {
      "type": "vector",
      "url": "pmtiles://data/all_cells.pmtiles"
    },

    "small-cells-source": {
      "type": "vector",
      "url": "pmtiles://data/small_cells.pmtiles"
    },

    "unitless-towers-source": {
      "type": "vector",
      "url": "pmtiles://data/unitless_towers.pmtiles"
    }
  },
  "layers": [
    {
      "id": "coverage-map-layer",
      "type": "raster",
      "source": "coverage-map-source",
      "paint": {
        "raster-opacity": 0.85
      }
    },


    {
        "id": "unitless-towers",
        "type": "fill",
        "source": "unitless-towers-source",
        "source-layer": "unitless_towers",
        "paint": {
            "fill-color": [
                "match",
                ["get", "provider"],

                "t", "#00FF00",
                "v", "#FF0000",
                "b", "#0000FF",

                "tv", "#FFFF00",
                "tb", "#00FFFF",
                "vb", "#FF00FF", 

                "tvb", "#FFFFFF",

                "#CCCCCC"
            ],
            "fill-opacity": ["interpolate", ["linear"], ["zoom"], 6, 0, 14, 1]
        }
    },

    {
        "id": "cells-layer",
        "type": "fill",
        "source": "cells-source",
        "source-layer": "cells",
        "paint": {
            "fill-color": [
                "match",
                ["get", "provider"],
                "t", "#00FF00", 
                "v", "#FF0000", 
                "b", "#0000FF", 
 
                "tv", "#FFFF00",
                "tb", "#00FFFF",
                "vb", "#FF00FF", 
    
                "tvb", "#FFFFFF", 
                "#CCCCCC"
            ],
            "fill-opacity": ["interpolate", ["linear"], ["zoom"], 6, 0, 14, 1]
        }
    },

    {
        "id": "small-cells-polygons",
        "type": "fill",
        "source": "small-cells-source",
        "source-layer": "small_cells", 
        "paint": {
            "fill-color": "#ffffff",
            "fill-opacity": ["interpolate", ["linear"], ["zoom"], 6, 0, 14, 0.5],
            "fill-outline-color": "#000000"
        }
    },


    {
      "id": "water-fill",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "water",
      "paint": { "line-color": "rgba(20,100,172,0.9)" }
    },
    {
      "id": "roads-primary",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "roads",

      "paint": {
        "line-color": "rgba(255,255,255,0.9)",
        "line-width": 2,
        "line-opacity": ["interpolate", ["linear"], ["zoom"], 6, 0.1, 14, 0.02]
      }
    },
    {
      "id": "roads-secondary",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "roads",
      "filter": ["==", "class", "secondary"],
      "paint": {
        "line-color": "rgba(255,255,255,0.85)",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.8, 14, 4],
        "line-opacity": 0.85
      }
    },
    {
      "id": "roads-local",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "roads",
      "filter": ["in", "class", "tertiary", "residential", "service"],
      "paint": {
        "line-color": "rgba(255,255,255,0.75)",
        "line-width": ["interpolate", ["linear"], ["zoom"], 12, 0.5, 16, 2],
        "line-opacity": 0.75
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "boundaries",
      "paint": {
        "line-color": "rgba(200,200,200,0.6)",
        "line-width": 1,
        "line-dasharray": [2,2],
        "line-opacity": 0.6
      }
    },
    {
      "id": "buildings-outline",
      "type": "line",
      "source": "pmtiles-basemap",
      "source-layer": "buildings",
      "minzoom": 13,
      "paint": {
        "line-color": "rgba(255,255,255,0.9)",
        "line-width": 0.8,
        "line-opacity": 0.95
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "pmtiles-basemap",
      "source-layer": "places",
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 12, 14],
        "text-anchor": "center",
        "text-allow-overlap": false,
        "text-font": ["Roboto Bold"]
      },
      "paint": {
        "text-color": "rgba(255,255,255,1)",
        "text-halo-color": "rgba(0,0,0,1)",
        "text-halo-width": 2
      }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "pmtiles-basemap",
      "source-layer": "pois",
      "minzoom": 13,
      "layout": {
        "text-field": "{name}",
        "text-size": 12,
        "text-font": ["Roboto Regular"]
      },
      "paint": {
        "text-color": "rgba(255,255,255,0.95)",
        "text-halo-color": "rgba(0,0,0,0.65)",
        "text-halo-width": 2
      }
    }
  ]
}
